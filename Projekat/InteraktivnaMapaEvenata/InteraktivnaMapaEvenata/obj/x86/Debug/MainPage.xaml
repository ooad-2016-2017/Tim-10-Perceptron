<Page
    x:Class="InteraktivnaMapaEvenata.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InteraktivnaMapaEvenata"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Background="White" x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>           
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='2' x:Name="prijavaTextBlock" Grid.Column="1" Grid.Row="1" Text="Prijava" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"/>

        <TextBox x:ConnectionId='3' x:Name="emailTextBox" Grid.Column="1" Grid.Row="2" Height="30" Width="170" BorderThickness="0" />
        <Rectangle RadiusX="5" RadiusY="5" Grid.Column="1" Grid.Row="2" Width="{Binding Width,ElementName=emailTextBox}" Height="{Binding Height,ElementName=emailTextBox}" Stroke="Black" StrokeThickness="1"/>

        <PasswordBox x:ConnectionId='4' x:Name="pwBox" Grid.Column="1" Grid.Row="3" Height="30" Width="170" BorderThickness="0" VerticalAlignment="Top"/>
        <Rectangle RadiusX="5" RadiusY="5" Grid.Column="1" Grid.Row="3" Width="{Binding Width,ElementName=pwBox}" Height="{Binding Height,ElementName=pwBox}" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top"/>

        <Rectangle RadiusX="5" RadiusY="5" Grid.Column="1" Grid.Row="4" Width="{Binding Width,ElementName=potvrdiButton}" Height="{Binding Height,ElementName=potvrdiButton}" Stroke="Black" Fill="White" StrokeThickness="1" VerticalAlignment="Top"/>
        <Button x:ConnectionId='5' x:Name="potvrdiButton" Grid.Column="1" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Height="30" BorderThickness="0" Content="Potvrdi" Background="Transparent" Foreground="Black"/>

        <Rectangle RadiusX="5" RadiusY="5" Grid.Column="1" Grid.Row="4" Width="{Binding Width,ElementName=registerButton}" Height="{Binding Height,ElementName=registerButton}" Stroke="Black" Fill="White" StrokeThickness="1" VerticalAlignment="Bottom"/>
        <Button x:ConnectionId='6' x:Name="registerButton" Grid.Column="1" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="120" Height="30" BorderThickness="0" Content="Novi Korisnik" Background="Transparent" Foreground="Black"/>

        <Button x:ConnectionId='7' x:Name="fbButton" Grid.Column="1" Grid.Row="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="40" Height="40" BorderThickness="0" Content="FB" Background="Transparent" Foreground="Black"/>
        <Rectangle RadiusX="5" RadiusY="5" Grid.Column="1" Grid.Row="5" Width="{Binding Width,ElementName=fbButton}" Height="{Binding Height,ElementName=fbButton}" Stroke="Black" StrokeThickness="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

    </Grid>

