<Application
    x:Class="InteraktivnaMapaEvenata.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InteraktivnaMapaEvenata"
    RequestedTheme="Light">
    <Application.Resources>
        <Style x:Key="StandardPage" TargetType="Grid">
            <Setter Property="Background" Value="#2972e8"/>
            <!-- You should notice that one... -->
        </Style>
        <Style x:Key="ActiveCircle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#ff6730"/>
            <Setter Property="StrokeThickness" Value="0"/>
        </Style>
        <Style x:Key="InactiveCircle" TargetType="Rectangle">
            <Setter Property="Fill" Value="White"/>
            <Setter Property="StrokeThickness" Value="0"/>
        </Style>
        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="InputField" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="RadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
